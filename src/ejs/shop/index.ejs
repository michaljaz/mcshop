                        <% }else{ %>
                            <script>document.location.href="?temp=404"</script>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-4 col-xs-12 col-lg-5 col-xl-4">
                    <div class="card text-light" style="background:#2d2d2d;">
                        <div class="card-header">
                            <center>
                                Utrzymanie serwera
                            </center>
                        </div>
                        <div class="card-body">
                            <div class="progress bg-dark" style="height:30px;">
                                <div class="progress-bar" role="progressbar" style="width:<%=database.month%>;height:30px;background:<%= database.theme %>;"><%=database.month%></div>
                            </div>
                            <div class="text-center mt-3">
                                "Cel miesiÄ™czny"
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="card text-light mb-3" style="background:#2d2d2d;">
                        <div class="card-header">
